        <form id="frmRegister" method="POST">
            <br />
            <div class="col half" style="float: left; vertical-align: middle;">
                <table>
                    <tr>
                        <td>
                            <label for="Email">Email: </label><span class="val_Email"></span>
                        </td>
                        <td>
                            <input placeholder="Email address" title="E.g. abc@gmail.com"
                                   type="text" name="Email" value="" id="Email" class="txt-fld"
                                   required />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Password">Password: </label><span class="val_password"></span>
                        </td>
                        <td>
                            @* FOR Password (UpperCase, LowerCase, Number/SpecialChar and min 8 Chars):
                                (?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$ *@
                            <input placeholder="Password" pattern="(?=^.{6,}$)((?=.*\d)(?=.*\W+))(?![.\n])(?=.*[A-Z]).*$"
                                   type="password" name="Password" value="" id="Password" class="txt-fld"
                                   title="1 Uppercase, 1 Number, 1 Special Character,
                                       Minimum 6 characters E.g. aB1!" required />
                        </td>
                    </tr>
